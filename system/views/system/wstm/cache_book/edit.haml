- xhr_hidden_data({dialog: 'edit',js_ext: 'desk_cache_book'})
%form{action: "/sys/#{@path}", method: "put"}
  %table
    %thead
      %tr{class: 'pdb-05'}
        %td
          - label_for @object, 'name'
          - value_for @object, 'name'
          - label_for @object, 'id_date'
          - value_for @object, 'id_date'
      %tr{class: 'pdb-05'}
        %td
          - label_for @object, 'ib'
          - value_for @object, 'ib',      {tag: {data: {val: 'ib'},class: 'strip st red'}}
          - label_for @object, 'fb'
          - value_for @object, 'fb',      {tag: {data: {val: 'fb'},class: 'strip st red'}}
          - label_for @object, 'lines'
          - value_for @object, 'lines',   {tag: {data: {val: 'nr'},class: 'strip st red',value: @object.lines.count}}
          - input_for @object, 'name',    {tag: {type: 'hidden',value: @object.name}}
          - input_for @object, 'id_date', {tag: {type: 'hidden',value: @object.id_date.to_s}}
          - input_for @object, 'ib',      {tag: {data: {val: 'ib'},type: 'hidden',value: @object.ib}}
          - input_for @object, 'fb',      {tag: {data: {val: 'fb'},type: 'hidden',value: @object.fb}}
      %tr{class: 'pdb-05'}
        %td{class: 'add-line-container'}
          = haml :"#{@path}/_doc_add_line"
    %tbody
      %tr
        %td
          = haml :"#{@path}/_form", locals: {create: false}
    %tfoot{class: 'ta-ce'}
      - tr_buttonset ['save','cancel']
