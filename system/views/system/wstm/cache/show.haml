%span#hidden_data.hidden{data: {dialog: "show",model_name: mat(@object,'model_name'),oid: @object.id,js_ext: 'desk_cache'}}
%form{action: "/sys/#{@path}",method: "get"}
  %table{cellspacing: "0"}
    %thead
      %tr.pdb-05
        %td{colspan: "2"}
    = partial "#{@path}/show"
    %tfoot
      %tr
        - if @current_user.admin?
          - td_buttonset(['create','edit','delete','cancel'],{style: 'ta-ce'},'2')
        - else
          - td_buttonset(['create','edit','cancel'],{style: 'ta-ce'},'2')
