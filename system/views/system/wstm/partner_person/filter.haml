%span#hidden_data{data: {dialog: "filter",model_name: mat(@object,'model_name'),oid: "null",js_ext: 'desk_partner_person'}}
%article#xhr_info.info
  %i.fa.fa-info-circle.fa-lg.blue
  = t("intro.filter.main",data: mat(@object,'model_name'))
%form{action: "/sys/#{@path}",method: "get"}
  %table
    %tbody
      %tr.pdb-05
        %td
          %input.w-30rem.select2{type: 'hidden',data: {minlength: '3',ph: '0',search: @path.classify}}
    %tfoot
      %tr
        %tr
          - if @current_user.admin?
            - td_buttonset(['create','show','edit','delete','cancel'], {style: 'ta-ce', show: {r_path: "/sys/#{@path}/filter"}})
          - else
            - td_buttonset(['create','show','edit','cancel'],{style: 'ta-ce'})
