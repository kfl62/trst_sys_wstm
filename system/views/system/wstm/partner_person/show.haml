%span#hidden_data.hidden{data: {dialog: "show", title: t("show.title", data: mat(@object,'model_name')), model: mat(@object,'model_name'), oid: @object.id, related_id: params[:related_id] || 'null'}}
%form{action: "/sys/#{@path}", method: "get"}
  %table{cellspacing: "0"}
    %thead
      %tr
        %th{colspan: "2"}
    = partial "#{@path}/show"
    %tfoot
      %tr
        %td.buttonset.ce{colspan: "2"}
          - if params[:reload_path]
            %button{type: "button", data: {url: "#{params[:reload_path]}?client_id=#{@object.id}",action: "create", icon: "circle-plus"}}=  t('button.create') + " APP!"
            %button{type: "button", data: {url: "/sys/#{@path}?reload_path=#{params[:reload_path]}",action: "edit",icon: "document",remove: 'false'}}= t('button.edit')
          - else
            %button{type: "button", data: {action: "create", icon: "circle-plus"}}=  t('button.create')
            %button{type: "button", data: {action: "edit",   icon: "document",remove: 'false'}}= t('button.edit')
          - if params[:reload_path] || @current_user.admin?
            %button{type: "button", data: {action: "delete", icon: "circle-minus",remove: 'false'}}= t('button.delete')
          %button{type: "button", data: {action: "cancel", icon: "circle-close"}}= t('button.cancel')
