%span#hidden_data.hidden{data: {dialog: "show",model_name: mat(@object,'model_name'),oid: @object.id}}
%form{action: "/sys/#{@path}", method: "get"}
  %table{cellspacing: "0"}
    %thead
      %tr
        %th{colspan: "2"}
    = partial "#{@path}/show"
    %tfoot
      %tr
        %td.buttonset.ce{colspan: "2"}
          - if session[:r_path]
            %button{type: "button", data: {url: "#{session[:r_path].gsub('!','/')}?client_id=#{@object.id}",r_path: 'remove',action: "create", icon: "circle-plus"}}=  t('button.create') + " APP!"
            %button{type: "button", data: {action: "edit",icon: "document",remove: 'false'}}= t('button.edit')
          - else
            %button{type: "button", data: {action: "create", icon: "circle-plus"}}=  t('button.create')
            %button{type: "button", data: {action: "edit",   icon: "document",remove: 'false'}}= t('button.edit')
          - if session[:r_path] || @current_user.admin?
            %button{type: "button", data: {action: "delete", icon: "circle-minus",remove: 'false'}}= t('button.delete')
          %button{type: "button", data: {action: "cancel", icon: "circle-close"}}= t('button.cancel')
