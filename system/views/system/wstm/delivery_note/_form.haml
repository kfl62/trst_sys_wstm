- if with_pu
  %tbody.inner
    %tr.scroll
      - mat(@object,'table_header_form_with_pu').each do |label|
        %td= label
    - if @object.freights.empty?
      - for i in 0..4 do; o = @object.freights.new
        %tr.freight
          %td.select-freight
            %select.wstm.freight
              %option{value: 'null',data: {id_stats: 'null',um: 'kg',pu: 0,stck:0}} Selectare material
              - freights.each do |f|
                %option{value: f[0], data: f[2]}= f[1]
            - input_for   o, 'id_date',   {type: 'hidden',nested: 'doc_dln',value: 'strip',index: i}
            - input_for   o, 'id_stats',  {type: 'hidden',nested: 'doc_dln',value: 'strip',index: i}
            - input_for   o, 'id_intern', {type: 'hidden',nested: 'doc_dln',value: client.firm.to_s,index: i}
            - input_for   o, 'um',        {type: 'hidden',nested: 'doc_dln',value: 'strip',index: i}
            - input_for   o, 'freight_id',{type: 'hidden',nested: 'doc_dln',value: 'strip',index: i}
          %td.ta-ce
            %span.um kg
          %td.ta-ri
            %span.puf 0.00
            - input_for   o, 'pu',        {type: 'hidden',nested: 'doc_dln',value: 'strip',index: i}
            - input_for   o, 'val',       {type: 'hidden',nested: 'doc_dln',value: 'strip',index: i}
          %td.ta-ri
            %span.stck 0.00
          %td.w-8rem.ta-ce.st
            - input_for  o, 'qu',         {style: 'w-6rem ta-ri',nested: 'doc_dln',index: i}
          %td.w-8rem.ta-ce.st
            - input_for  o, 'pu_invoice', {style: 'w-6rem ta-ri',nested: 'doc_dln',index: i}
            - input_for  o, 'val_invoice',{type: 'hidden',nested: 'doc_dln',index: i}
          %td.ta-ri
            %span.res 0.00
          %td
            %span.fa.fa-minus-circle.red{title: t('button.delete')}
      %tr.total
        %td{colspan: '4'}
          %span Total
        %td
          %span.res 0.00
        %td{colspan: '2'}
          %span &nbsp;
          %td
            %span.fa.fa-plus-circle{title: t('button.new_row')}
    - else
      %tr
        %td{colspan: '8'}
          %span.warning Editing not allowed!
