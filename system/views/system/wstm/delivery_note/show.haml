:ruby
  firm    = Wstm::PartnerFirm.find_by(firm: true)
  dups = Wstm::DeliveryNote.monthly(@object.id_date.year,@object.id_date.month).where(:id.ne => @object.id,doc_name: @object.doc_name,client_id: @object.client_id)
%span#hidden_data.hidden{data: {dialog: "show",model_name: mat(@object,'model_name'),oid: @object.id,js_ext: 'desk_delivery_note'}}
%form{action: "/sys/#{@path}", method: "get"}
  %table{cellspacing: "0"}
    %thead
      - if dups.count > 0
        - dups.asc(:id_date).each do |d|
          %tr.pdb-05
            %td{colspan: "6"}
              %span.warning.width-450{title: d.freights_list.join("\n")}= t('intro.show.desk_delivery_note_dups',id_date: d.id_date.to_s,doc_name: d.doc_name,client: d.client.name[0])
      %tr.pdb-05
        %td{colspan: "6"}
          %span.info.width-450.ju= t('intro.show.desk_delivery_note',doc_name: @object.doc_name,id_date: l(@object.id_date,format: :trst),firm: firm.name[2],firm_d: @object.signed_by.name,client: @object.client.name[2],client_d: (@object.client_d.name rescue 'Anonymous'),transp: @object.transp.name[2],transp_d: (@object.transp_d.name rescue 'Anonymous'))
    = partial "#{@path}/show"
    %tfoot
      %tr
        %td.buttonset.ce{colspan: "6"}
          - if @object.freights.count == 0
            %button{type: "button",data: {action: "delete",icon: "circle-minus",type: 'delete'}}= t('button.delete')
          - else
            %button{type: "button",data: {action: "print",icon: "print"}}= t('button.print')
            %button{type: "button",data: {action: "delete",icon: "circle-minus",remove: 'false'}}= t('button.delete')
            %button{type: "button",data: {action: "cancel",icon: "circle-close"}}= t('button.cancel')
