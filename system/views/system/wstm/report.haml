:ruby
  ext  = params[:report]
  uid  = @current_user.unit_id
  unit = Wstm::PartnerFirm.unit_by_unit_id(uid) if uid
  firm = Wstm::PartnerFirm.find_by(firm: true) unless uid
  s2dt = firm.units.asc(:slug).map{|u| {id: u.id,text: u.slug}}.to_json if firm
  data = t("intro.filter.desk_report.#{ext}")
%span#hidden_data{data: {dialog: 'report',title_data: data,model_name: mat(@object,'model_name'),oid: nil,js_ext: 'desk_report'}}
- if ['cdd','grn','all'].include? ext
  %form{action: "/sys/wstm/report/print?rb=unit_daily_exp&ext=#{ext}"}
    %table
      %thead
        %tr.pdb-05
          %td{colspan: "2"}
            - if uid
              %detail.info.w-30rem
                %i.fa.fa-info-circle.fa-lg.blue
                = t("intro.filter.desk_report.unit",data: data,unit: unit.name[1])
            - else
              %detail.info.w-35rem
                %i.fa.fa-info-circle.fa-lg.blue
                = t("intro.filter.desk_report.firm",data: data)
      %tbody
        %tr.pdb-05
          %td
            %label Alegeţi data:
          %td
            - if uid
              %input#date_show.ui-state-default.ce{type: 'text',  value: l(Date.today, format: :trst),style: 'width:auto'}
              %input#date_send.ui-state-default.ce{type: 'hidden',value: Date.today.to_s,name: 'date'}
              %input{type: 'hidden',name: 'unit_ids',value: uid}
              %input#period{type: 'hidden',name: 'period',value: '1'}
              %input#file_name{type: 'hidden',name: 'fn',value: t("intro.pdf.desk_report.file_name.#{ext}", firm: unit.firm.name[0][0..2].upcase, unit: "_#{unit.slug}")}
            - else
              %input#date_show.ui-state-default.ce{type: 'text',  value: l(Date.today, format: :trst),style: 'width:auto'}
              %input#date_send.ui-state-default.ce{type: 'hidden',value: Date.today.to_s,name: 'date'}
              %label Nr.zile:
              %input#period.ui-state-default.ce{type: 'text',value: 1,name: 'period',size: '3',style: 'width:auto'}
        - unless uid
          %tr.pdb-05
            %td{colspan: '2'}
              %input#unit_ids.ui-state-default{type: 'hidden',name: 'unit_ids',style: 'width:300px',data: {data: s2dt}}
              %input#file_name{type: 'hidden',name: 'fn',value: t("intro.pdf.desk_report.file_name.#{ext}", firm: firm.name[0][0..2].upcase, unit: "_PCTE")}
      %tfoot
        %tr
          - td_buttonset ['print','cancel'],{style: 'ta-ce'},2
- elsif ext == 'plst'
  %form{action: "/sys/wstm/report/print?rb=unit_plst"}
    %table
      %thead
        %tr.pdb-05
          %td{colspan: "2"}
            - if uid
              %detail.info.w-30rem
                %i.fa.fa-info-circle.fa-lg.blue
                = t("intro.filter.desk_report.unit_plst",data: data,unit: unit.name[1])
              %input{type: 'hidden',name: 'unit_ids',value: uid}
              %input#file_name{type: 'hidden',name: 'fn',value: t("intro.pdf.desk_report.file_name.#{ext}", firm: unit.firm.name[0][0..2].upcase, unit: "_#{unit.slug}")}
              %input#date_send.ui-state-default.ce{type: 'hidden',value: Date.today.to_s,name: 'date'}
            - else
              %detail.info.w-35rem
                %i.fa.fa-info-circle.fa-lg.blue
                = t("intro.filter.desk_report.firm_plst",data: data)
              %input#date_send.ui-state-default.ce{type: 'hidden',value: Date.today.to_s,name: 'date'}
      %tbody
        - unless uid
          %tr.pdb-05
            %td{colspan: '2'}
              %input#unit_ids.ui-state-default{type: 'hidden',name: 'unit_ids',style: 'width:300px',data: {data: s2dt}}
              %input#file_name{type: 'hidden',name: 'fn',value: t("intro.pdf.desk_report.file_name.#{ext}", firm: firm.name[0][0..2].upcase, unit: "_PCTE")}
      %tfoot
        %tr
          - td_buttonset ['print','cancel'],{style: 'ta-ce'},2
- elsif ext == 'cb_monthly'
  %form{action: "/sys/wstm/report/print?rb=#{ext}"}
    %table
      %thead
        %tr.pdb-05
          %td{colspan: "2"}
            %detail.info.w-30rem
              %i.fa.fa-info-circle.fa-lg.blue
              = t("intro.filter.desk_report.#{ext}")
      %tbody
        %tr.pdb-05
          %td
            %label Alegeţi luna:
          %td
            %input#date_send.ui-state-default.ce{name: 'date',value: l(Date.today,format: '%Y-%m')}
            %input#file_name{type: 'hidden',name: 'fn',value: "#{firm.name[0][0..2].upcase}_RC-"}
      %tfoot
        %tr
          - td_buttonset ['print','cancel'],{style: 'ta-ce'},2
- else
  - type = ext.split('_')[1]
  %form{action: "/sys/wstm/report/print?rb=#{ext}"}
    %table
      %thead
        %tr.pdb-05
          %td{colspan: "2"}
            %detail.info.w-30rem
              %i.fa.fa-info-circle.fa-lg.blue
              = t("intro.filter.desk_report.#{type}",data: data)
      %tbody
        %tr.pdb-05
          %td
            %label Alegeţi luna:
          %td
            %input#date_send.ui-state-default.ce{name: 'date',value: l(Date.today,format: '%Y-%m')}
        - if type == 'stats'
          %tr.pdb-05
            %td{colspan: '2'}
              %input#unit_ids.ui-state-default{type: 'hidden',name: 'unit_ids',style: 'width:300px',data: {data: s2dt}}
              %input#file_name{type: 'hidden',name: 'fn',value: t("intro.pdf.desk_report.file_name.#{ext}", firm: firm.name[0][0..2].upcase, unit: "_DORU")}
        - else
          %input#file_name{type: 'hidden',name: 'fn',value: t("intro.pdf.desk_report.file_name.#{ext}", firm: firm.name[0][0..2].upcase, unit: "_CONTA")}
      %tfoot
        %tr
          - td_buttonset ['print','cancel'],{style: 'ta-ce'},2
