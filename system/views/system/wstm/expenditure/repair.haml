:ruby
  unit_id = @current_user.unit_id || session[:unit_id]
%span#hidden_data{data: {dialog: "repair",model_name: mat(@object,'model_name'),oid: "null",js_ext: 'desk_expenditure'}}
-if unit_id
  - unless @current_user.unit_id
    = partial 'wstm/shared/select_unit'
  %form{action: "/sys/#{@path}",method: "get"}
    %table
      %thead
        - if @current_user.unit_id
          %tr.pdb-05
            %td
              %datail.detail
                %i.fa.fa-info-circle.fa-lg.blue
                = t('intro.repair.desk_expenditure')
              %input#date_send{type: 'hidden',value: Date.today.to_s}
        - else
          %tr.pdb-05
            %td
              %span= mat(@object,'day')
              %input#date_show.ui-state-default{type: 'text',value: l(Date.today,format: :trst)}
              %input#date_send{type: 'hidden',value: Date.today.to_s}
      %tbody
        %tr.pdb-05
          %td
            %input.repair{type: 'hidden',style: 'width:410px',data: {search: 'Wstm::Expenditure',ph: '1',uid: unit_id}}
      %tfoot
        %tr
          - td_buttonset(['cancel'],{style: 'ta-ce'})
-else
  %form{action: "/sys/#{@path}", method: "get"}
    = partial 'wstm/shared/select_unit'
