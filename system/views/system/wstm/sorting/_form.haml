%tbody.inner
  %tr
    - mat(@object,'table_header_form').each do |label|
      %td.ce= label
  - if @object.resl_freights.empty?
    - for i in 0..4 do; o = @object.resl_freights.new
      %tr.freight
        %td.select-freight
          %select.wstm.freight
            %option{value: 'null'} Selectare material
            - resl_freights.each do |f|
              %option{value: f[0], data: f[2]}= f[1]
          - input_for   o, 'id_date',   {type: 'hidden',nested: 'doc_sor',value: 'strip',index: i}
          - input_for   o, 'id_stats',  {type: 'hidden',nested: 'doc_sor',value: 'strip',index: i}
          - input_for   o, 'um',        {type: 'hidden',nested: 'doc_sor',value: 'strip',index: i}
          - input_for   o, 'freight_id',{type: 'hidden',nested: 'doc_sor',value: 'strip',index: i}
        %td.ce
          %span.um kg
        %td.ce
          - input_for  o, 'qu',        {style: ' qu',nested: 'doc_sor',index: i}
        %td.action-1
          %span.icon-remove-sign{title: t('button.delete')}
    %tr.total
      %td.ce.st{colspan: '2'}
        %span Total
      %td
        %span.res 0.00
      %td
        %span &nbsp;
  - else
    %tr.pdb-05
      %td{colspan: '4'}
        %span.warning Editing not allowed!
