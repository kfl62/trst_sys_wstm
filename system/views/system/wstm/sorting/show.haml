- xhr_hidden_data({dialog: 'show',js_ext: 'desk_sorting'})
%form{action: "/sys/#{@path}",method: "get"}
  %table
    %thead
      %tr{class: 'pdb-05'}
        - td_detail_for 'detail w-35rem',t('intro.show.desk_sorting',id_date: l(@object.id_date,format: :trst),unit: @object.unit.name[1],signed_by: @object.signed_by.name,expl: @object.expl)
    %tbody
      %tr
        %td
          = haml :"#{@path}/_show"
    %tfoot{class: 'ta-ce'}
      %tr
        - tr_buttonset ['print','delete','cancel']
